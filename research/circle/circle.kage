package main

var Side float
var Color vec4


func Fragment(pos vec4, tex vec2, color vec4) vec4 {
    cutoff := 0.491

    st := pos.xy / vec2(Side)
    dist := distance(st, vec2(0.5))
    delta := fwidth(dist);
    alpha := smoothstep(cutoff - delta, cutoff, dist)
    return mix(Color, vec4(0), alpha)
}